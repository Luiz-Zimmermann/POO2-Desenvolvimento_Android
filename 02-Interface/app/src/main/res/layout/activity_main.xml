<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/person"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#4876f5"
        android:tint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account_black_48dp" />



    <ImageView
        android:id="@+id/littleperson"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person"
        android:tint="#878e87"
        app:srcCompat="@drawable/ic_account_black_18dp" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:tint="#878e87"
        app:layout_constraintEnd_toStartOf="@+id/secondname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/littleperson"
        app:srcCompat="@drawable/baseline_phone_black_36" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:tint="#878e87"
        app:layout_constraintEnd_toStartOf="@+id/cellphonenumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:srcCompat="@drawable/baseline_email_black_36" />



    <EditText
        android:id="@+id/fisrtname"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/littleperson"
        app:layout_constraintTop_toBottomOf="@+id/person"
        android:hint="@string/first"/>

    <EditText
        android:id="@+id/secondname"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/littleperson"
        app:layout_constraintTop_toBottomOf="@+id/fisrtname"
        android:hint="@string/second"/>

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:hint="@string/phone"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/secondname" />

    <EditText
        android:id="@+id/cellphonenumber"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber"
        android:hint="@string/cellph"/>

    <EditText
        android:id="@+id/emailtext"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/cellphonenumber" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_photo_camera_white_48" />


</android.support.constraint.ConstraintLayout>